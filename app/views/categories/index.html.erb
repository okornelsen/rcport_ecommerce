<h2 class="">Categories</h2>

<div class="card-deck">
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-lg-3 col-md-4 col-sm-6 mt-4">
        <div class="card">
          <div class="card-body">
            <p class="card-text"><%= link_to category.vehicle_type, category %></p>
          </div>
        </div>
      </div>
    <% end %>
   </div>
</div>