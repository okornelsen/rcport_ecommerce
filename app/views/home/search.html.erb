<div class="card-deck">
  <h2>Found <%= pluralize(@products.count, "Product") %> for: <%= params[:keywords] %> - <%= @category.first.vehicle_type %></h2>
    <% if @products.count > 0 %>
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-xl-3 col-lg-4 col-md-6 mt-4">
          <a class="hover_card" href="<%= product_path product.id %>">
            <div class="card">
              <div class="car car-index">
                <img class="card-img-top" src="/assets/<%= product.image %>" alt="Image">
              </div>
              <div class="info">
                <h1><%= product.price %></h1>
                <h2><%= product.name %></h2>
              </div>
              <div class="sizes">
                <button type="button" class="btn btn-outline-dark">Add to Cart</button>
              </div>
            </div>
          </a>
        </div>
      <% end %>
     <% end %>
  </div>
</div>